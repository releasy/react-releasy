{
  "name": "react-releasy",
  "version": "0.0.1",
  "description": "Relay with zero-configuration",
  "keywords": [
    "react",
    "relay",
    "graphql"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-plugin-relay": "^1.4.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.17.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-import-resolver-webpack": "^0.8.4",
    "babel-polyfill": "^6.26.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.6.1",
    "fbjs": "^0.8.16",
    "flow-bin": "^0.65.0",
    "invariant": "^2.2.2",
    "jest": "^22.2.1",
    "jest-fetch-mock": "^1.4.1",
    "lint-staged": "^6.1.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.10.2",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-relay": "^1.4.1",
    "relay-compiler": "^1.4.1",
    "relay-devtools": "^1.4.0",
    "relay-runtime": "^1.4.1"
  },
  "dependencies": {},
  "peerDependencies": {
    "fbjs": "^0.8.16",
    "invariant": "^2.2.2",
    "react": ">=0.16",
    "react-relay": ">=1.4.0",
    "relay-devtools": ">=1.4.0",
    "relay-runtime": ">=1.4.0"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/test/setup.js"
    ],
    "testPathIgnorePatterns": [
      "/__generated__/",
      "/coverage/",
      "/lib/",
      "/node_modules/"
    ],
    "coveragePathIgnorePatterns": [
      "/__tests__/",
      "/__generated__/",
      "/coverage/",
      "/lib/",
      "/node_modules/"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  },
  "lint-staged": {
    "src/**/*.js": [
      "yarn prettier",
      "git add"
    ]
  },
  "pre-commit": [
    "flow",
    "lint:staged"
  ],
  "scripts": {
    "prepublish": "npm run build",
    "test": "jest --coverage --runInBand --forceExit",
    "test:watch": "jest --watch --coverage",
    "build": "babel src -d lib --ignore __tests__",
    "flow": "node_modules/.bin/flow check",
    "lint": "eslint --ext js src",
    "lint:staged": "lint-staged",
    "check": "npm run lint && npm run test",
    "release:patch": "npm run check && npm version patch && git push --follow-tags && npm publish --access public",
    "release:minor": "npm run check && npm version minor && git push --follow-tags && npm publish --access public",
    "release:major": "npm run check && npm version major && git push --follow-tags && npm publish --access public",
    "relay": "relay-compiler --src ./test --schema test/fixtures/graphql/schema.graphql"
  }
}
